<div class="page-header">
  <h1>Divvy Stations</h1>
</div>


<div class="row table-responsive">
  <div class="col-sm-8">
    <table class="table table-striped table-bordered">

      <thead>
        <th>ID</th>
        <th>Location</th>
        <th class="text-center">Bikes Available</th>
      </thead>

      <tbody>
        <% @stations.each do |station| %>
          <tr>
            <td><%= link_to station['id'], "/stations/#{station['id']}" %></td>
            <td><%= link_to station['name'], "/stations/#{station['id']}" %></td>
            <td class="text-center"><%= station['availableBikes'] %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
